{
  "name": "Responsive KPI",
  "description": "Simple customizable and responsive KPI tile.",
  "author": "",
  "library": "widget-examples",
  "meta": {
    "type": "kpi"
  },
  "properties": {
    "settings": [
      {
        "label": "Header",
        "ref": "header"
      },
      {
        "label": "Description",
        "ref": "description",
        "defaultValue": "Description"
      }
    ],
    "addons": {},
    "dimensions": {
      "min": 0,
      "max": 0
    },
    "measures": {
      "min": 1,
      "max": 1
    },
    "sections": [
      {
        "ref": "settings",
        "type": "header",
        "label": "Settings"
      }
    ]
  }
}
