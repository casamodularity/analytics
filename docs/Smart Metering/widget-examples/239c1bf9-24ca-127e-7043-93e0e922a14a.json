{
  "name": "Branded KPI",
  "description": "Branded KPI tile, demonstrating how to create a fully responsive Widget.",
  "author": "",
  "library": "widget-examples",
  "meta": {
    "type": "kpi"
  },
  "properties": {
    "dimensions": {
      "min": 0,
      "max": 0
    },
    "measures": {
      "min": 1,
      "max": 1
    },
    "sections": [
      {
        "type": "header",
        "order": 1,
        "ref": "header1",
        "label": "Color"
      }
    ],
    "settings": [
      {
        "component": "dropdown",
        "type": "string",
        "defaultValue": "green",
        "options": [
          {
            "label": "Green",
            "value": "green"
          },
          {
            "label": "Blue",
            "value": "blue"
          }
        ],
        "order": 0,
        "parent": "header1",
        "ref": "color",
        "label": "Color"
      }
    ]
  }
}
